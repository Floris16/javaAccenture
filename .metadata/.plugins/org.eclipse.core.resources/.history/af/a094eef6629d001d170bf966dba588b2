import java.util.Scanner;

public class Es1Array {
	
	public static void main(String[] args) {
		
		System.out.println("Inserisci la dimensione dell'array:");
		int n=leggi();
		
		while (n<0); {
			System.out.println("L'indice che hai inserito Ã¨ sbagliato");
			n=leggi();
		}
		
		System.out.println("Popola l'array");
		int [] A= new int[n];
		A=pop(A);
		int [] B= new int[n];
		B=inv(A);
		
		System.out.println("Array A:");
		stampaArray(A);
		
		System.out.println("Array B:");
		stampaArray(B);
		
	}
	
	public static int leggi() {
		Scanner sc = new Scanner(System.in);
		int n = sc.nextInt();
		return n;
	}
	
	public static int[] pop (int[] array) {
		for (int i=0; i < array.length; i++) {
			System.out.println(i);
			array[i]=leggi();
		}
		return array;
	}
	
	public static int[] inv (int[] array) {
		int n=array.length; //array = {1,2,3,4,5}
		int[] invertito = new int[n];  //invertito = { , , , , }
		for (int i=0; i < array.length; i++) {
			invertito[i]=array[n-1];
			n--;
		}
		return invertito;
	}
	
	public static void stampaArray (int[] array) {
		for (int i=0; i < array.length; i++)
			System.out.println(array[i]);
	}
}
