
public class Es7Array {
	public static void main(String[] args) {
		
		int n = Utilities.dim();
		
		double[] temperatura = Utilities.popolaArrayRandom(n);
		System.out.println("La media totale è: " + mediaArray(temperatura));
		stampaTemperature(temperatura);
		
	}
	
	
	public static double mediaArray(double[] array) {
		double media=0;
		
		for (double k : array) {
			media = media + k;
		}
		
		return media/array.length;
		
	}
	
	public static void stampaTemperature(double[] array) {
		double mediaTemp = mediaArray(array);
		
		for(int i = 0; i < array.length; i++) {
			if(array[i]>mediaTemp) {
				System.out.println("la temperatura " + array[i] + " è sopra la media");
				System.out.printf("La temperatura %.1f è sopra la media" ,array[i]  );
			}else if(array[i]<mediaTemp) {
				System.out.println("la temperatura " + array[i] + " è sotto la media");
				
			}else {
				System.out.println("la temperatura " + array[i] + "è uguale alla media");
			}
		}
		
		
		
	}
}
