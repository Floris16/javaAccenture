import java.util.Scanner;

public class sommatoria {
	public static void main(String[] args) {
		int n, k;
		
		System.out.println("Inserisci due numeri n e k:");
		n=leggi();
		k=leggi();
		
		System.out.println(sommatoria(n,k));
		
	}
	
	public static int leggi() {
		Scanner sc = new Scanner(System.in);
		int num;
		
		do {
			num=sc.nextInt();
			
			if (num <= 0)
				System.out.println("Il numero che hai inserito Ã¨ fuori dal range");
		
		} while (num <= 0);
		
		return num;
	}
	
	
	public static int sommatoria(int n, int k) {
		while (n>=0) {
			k+=k;
			n--;
		}
		return k;
	}
}