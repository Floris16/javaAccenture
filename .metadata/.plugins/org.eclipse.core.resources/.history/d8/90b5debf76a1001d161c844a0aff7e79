package com.corso.oop.es4;

public class Film {
	
	enum MPAA {
		G,
		PG, 
		PG_13, 
		R;
		}
	enum Valutazione {
		TERRIBILE(1,0),
		ERUCTO(2,0), 
		NORMALE(3,0), 
		BELLO(4,0),
		GRANDIOSO(5,0);
		
		final int val;
		int numPers;
		Valutazione(int val, int numPers) {
		}
	}
	
	
	
	String titolo;
	MPAA Classif;
	Valutazione Valut;
	
	public String getTitolo() {
		return titolo;
	}

	public void setTitolo(String titolo) {
		this.titolo = titolo;
	}

	public MPAA getClassif() {
		return Classif;
	}

	public void setClassif(int clas) {
		
		
		
		
		
		switch (clas) {
		case 1: 
			this.Classif=MPAA.G;
			break;
		case 2: 
			this.Classif=MPAA.PG;
			break;
		case 3: 
			this.Classif=MPAA.PG_13;
			break;
		case 4: 
			this.Classif=MPAA.R;
			break;
		}
	}
	
	public void setClassif(String clas) {
		switch (clas) {
		case "G":
			this.Classif=MPAA.G;
			break;
		case "PG":
			this.Classif=MPAA.PG;
			break;
		case "PG_13":
			this.Classif=MPAA.PG_13;
			break;
		case "R": 
			this.Classif=MPAA.R;
			break;
		}
	}

	public Valutazione getValut() {
		return Valut;
	}
	
	public void addValut(int valut) {
		switch (valut) {
		case 1:
			this.Valut=Valutazione.TERRIBILE;
			this.Valut.numPers++;
			break;
		case 2: 
			this.Valut=Valutazione.ERUCTO;
			this.Valut.numPers++;
			break;
		case 3: 
			this.Valut=Valutazione.NORMALE;
			this.Valut.numPers++;
			break;
		case 4: 
			this.Valut=Valutazione.BELLO;
			this.Valut.numPers++;
			break;
		case 5: 
			this.Valut=Valutazione.GRANDIOSO;
			this.Valut.numPers++;
			break;
		}
		
	}

	
	
	public Film () {
		}
	}
}
