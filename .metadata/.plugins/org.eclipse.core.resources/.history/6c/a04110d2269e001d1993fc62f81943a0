
public class Es7Stringhe {
	public static void main(String[] args) {
		String in=Utilities.scanString();
		
		palindroma(in);
	}
	
	public static void palindroma (String s) {
		int n=s.length();
		String s1=s.replace(" ", ""); //skippo gli spazi
		
		String split1=s1.substring(0,s.length()/2);
		String split2=s1.substring(s.length()/2);
		
		System.out.println(split1);
		System.out.println(split2);
		
		
		
		for (int i=0; i<split1.length();i++)
			for (int j=split2.length()-1; j>=0; j--)
				if (!(split1.charAt(i)==split2.charAt(j))) {
					System.out.println("Non è palindroma");
					return;
				}
		System.out.println(s + " è palindroma");
	}
}