package com.classi;

public class Auto {

	private String marca;
	private String modello;
	private double benzina = 10;
	private boolean accesa = false;
	private double velocita = 0;
	private static final double MAXBENZINA = 100;
	private static final double MAXVELOCITA = 200;

	/*
	 * public Auto() { System.out.println("ho creato un'auto.."); }
	 */

	public Auto(String marca, String modello) {
		this.marca = marca;
		this.modello = modello;
	}

	public void accendi() {
		if (this.accesa == false) {
			this.accesa = true;
		} else
			System.out.println("l'auto è già accesa..");
	}

	public void spegni() {
		if (this.accesa == true) {
			this.accesa = false;
			this.velocita = 0;
		} else
			System.out.println("l'auto è già spenta..");
	}

	public boolean eAccesa() {
		return accesa;
	}

	public void faiBenzina(double qnt) {
		if (qnt <= 0) {
			System.out.println("non hai messo benzina..");
		} else if ((this.benzina + qnt) <= MAXBENZINA) {
			this.benzina += qnt;
		} else {
			System.out.println("hai fatto il pieno");
			this.benzina = MAXBENZINA;
		}
	}

	public double getBenzina() {
		System.out.println("totale benzina:" + this.benzina);
		return this.benzina;
	}

	public void accelera(double vlct) {
		System.out.println("stai accelerando");
		if (vlct <= 0) {
			System.out.println("non stai accelerando..");
		} else {
			if (accesa == true && (vlct + this.velocita) <= MAXVELOCITA) {
				this.velocita += vlct;
			} else if (accesa == true && (vlct + this.velocita) > MAXVELOCITA) {
				this.velocita = MAXVELOCITA;
				System.out.println("L'auto va gia al massimo, rallenta!..");
			} else
				System.out.println("l'auto è spenta..");
		}
	}

	public void decelera(double vlct) {
		if (vlct <= 0) {
			System.out.println("non stai decelerando..");
		} else if ((this.velocita - vlct) <= 0) {
			this.ferma();
			System.out.println("Ti sei fermato");
		} else
			this.velocita -= vlct;

	}

	public void ferma() {
		if (accesa == true) {
			this.velocita = 0;
		} else
			System.out.println("l'auto è spenta..");
	}

	public boolean eInMoto() {
		if (accesa == true && this.velocita != 0) {
			return true;
		} else
			return false;
	}

	/*
	 * public String toString() { String ss = ""; ss = "Marca: " + this.marca +
	 * " Modello: " + this.modello + "\n" + "il livello del serbatoio è: " +
	 * this.benzina + "\n" + "ora l'auto è: " + this.accesa; if (accesa == true) {
	 * ss += "l'auto sta viaggiando a: " + this.velocita; } else
	 * System.out.println("l'auto è ferma"); return ss; }
	 */
	public String toString() {
		String s1 = "", s2 = "";
		if (this.accesa == true) {
			s1 = "accesa";
			if (eInMoto()) {
				s2 = String.format("sta viaggiando a: %.1f", this.velocita);
			} else s2 = "è ferma";
		} else {
			s1 = "spenta";
			s2 = "è ferma";
		}
		String ss = String.format(
				"Marca: %s Modello: %s \nIl livello del serbatoio è: %.1f \nora l'auto è: %s \n" + "L'auto %s",
				this.marca, this.modello, this.benzina, s1, s2);
		return ss;
	}

}
