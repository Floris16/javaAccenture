package com.corso.oop.es4;

public class Film {
	
	enum MPAA {
		G,
		PG, 
		PG_13, 
		R;
		}
	enum Valutazione {
		TERRIBILE(1,0),
		ERUCTO(2,0), 
		NORMALE(3,0), 
		BELLO(4,0),
		GRANDIOSO(5,0);
		
		final int val;
		int numPers;
		Valutazione(int val, int numPers) {
			this.val = val;
			this.numPers = numPers;
		}
	}
	
	
	
	String titolo;
	MPAA Classif;
	Valutazione Valut;
	
	public String getTitolo() {
		return titolo;
	}

	public void setTitolo(String titolo) {
		this.titolo = titolo;
	}

	public MPAA getClassif() {
		return Classif;
	}

	public void setClassif(int clas) {
		
		MPAA[] possibiliClassificazioni = MPAA.values(); 
 		
		for (MPAA classificazione : possibiliClassificazioni) 
			if (classificazione.ordinal()==clas)
				this.Classif=classificazione;
	}
		
		
		switch (clas) {
		case 1: 
			this.Classif=MPAA.G;
			break;
		case 2: 
			this.Classif=MPAA.PG;
			break;
		case 3: 
			this.Classif=MPAA.PG_13;
			break;
		case 4: 
			this.Classif=MPAA.R;
			break;
		}
	}
	
	public void setClassif(String clas) {
		switch (clas) {
		case "G":
			this.Classif=MPAA.G;
			break;
		case "PG":
			this.Classif=MPAA.PG;
			break;
		case "PG_13":
			this.Classif=MPAA.PG_13;
			break;
		case "R": 
			this.Classif=MPAA.R;
			break;
		}
	}

	public Valutazione getValut() {
		return Valut;
	}
	
	public void addValut(int score) {
		Valutazione[] possibiliValutazioni = Valutazione.values();
		
		for (Valutazione voto : possibiliValutazioni) {
			if (voto.val==score) {
				this.Valut=voto;
				this.Valut.numPers++;
			} else
				System.out.println("Valore fuori dal range. Non e' stata eseguita nessuna modifica");
		}
	}
	
	public void addValut(String score) {
		Valutazione[] possibiliValutazioni = Valutazione.values();
		
		for (Valutazione voto : possibiliValutazioni) {
			if (voto.toString().equalsIgnoreCase(score)) {
				this.Valut=voto;
				this.Valut.numPers++;
			}
		}
	}

	
	
	public Film () {
		}
}
