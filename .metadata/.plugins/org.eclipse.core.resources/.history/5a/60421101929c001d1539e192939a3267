import java.util.Scanner;

public class calendario {
	public static void main(String[] args) {
		
		int giorno, mese;
		System.out.println("Inserisci giorno e mese");
		
		do {
			giorno=leggi();
			mese=leggi();
		} while (!checkData(giorno,mese));
		
	}
	
	public static int leggi() {
		Scanner sc = new Scanner(System.in);
		int num;
		
		do {
			num=sc.nextInt();
			
			if (num <= 0)
				System.out.println("valori giorno/mese non coerenti");
		
		} while (num <= 0);
		
		return num;
	}
	
	public static boolean checkData(int giorno, int mese) {
		if ((giorno<=0 && giorno>31) || (mese<=0 && mese >12))
			return false;
		switch (mese) {
		case 2: 
			if (giorno>28)
				return false;
		case 4: case 6: case 9: case 11:
			if (giorno>30)
				return false;
		default:
			return true;
		}
	}
}
